# Environment variables for Kubernetes deployment
# Copy this to .env and fill in actual values

# Neon Database URL
DATABASE_URL=postgresql://user:password@hostname/database

# Better Auth Secret (must match frontend)
BETTER_AUTH_SECRET=your-secret-key-here

# OpenAI API Key
OPENAI_API_KEY=sk-...

# OpenAI ChatKit Domain Key (for hosted ChatKit)
NEXT_PUBLIC_OPENAI_DOMAIN_KEY=your-domain-key-here

# CORS Origins (JSON array)
CORS_ORIGINS=["http://localhost:3000","http://todo-frontend"]
